<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="octroyees_state" model="mail.template">
            <field name="name">Octroyees status</field>
            <field name="model_id" ref="model_status_folder"/>
            <field name="subject">State Octroyees [${object.name}]</field>
            <field name="email_from">${object.company_id.email}</field>
            <field name="body_html" type="html">
                <div>
                    <table border="0" cellpadding="0" cellspacing="0"
                           style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;">
                        <tr>
                            <td align="center">
                                <table border="0" cellpadding="0" cellspacing="0" width="590"
                                       style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                                    <tbody style="direction: rtl !important;font-family: 'Loew-Next-Arabic'!important;">
                                        <p>testmail</p>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </table>
                </div>
            </field>
        </record>
    </data>
</odoo>